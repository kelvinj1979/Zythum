<!--=====================================
	DETAIL DATA BODY
======================================-->

<div class="container-fluid">

	<div class="container">

		<div class="row">
			<!-- LEFT COLUMN MENU-->
			<div class="col-md-3 mt-2">
				<div>
					<ul class="fa-ul">
						<li class="list-group-item"><h6><a href="@Url.Action("Index","Home")">Home</a></h6></li>
						<li class="list-group-item sd-active"><i class="fa-solid fa-id-card"></i>  <a href="@Url.Action("Perfil","Home")">My Profile</a></li>
						<li class="list-group-item"><i class="fa-solid fa-people-group"></i>  <a href="@Url.Action("Friends","Home")">My Friends</a></li>
						<li class="list-group-item"><i class="fa-solid fa-comments"></i>  <a href="@Url.Action("Friends_Activities","Home")">Recent Friend Activity</a></li>
						<li class="list-group-item"><i class="fa-solid fa-beer-mug-empty"></i>  <a href="@Url.Action("Beer_History","Home")">Beer History</a></li>
						<li class="list-group-item"><i class="fa-solid fa-archway"></i>  <a href="places.html">Beer Places</a></li>
						<li class="list-group-item"><i class="fa-solid fa-computer"></i>  <a href="settings.html">Account Settings</a></li>
						<li class="list-group-item"><i class="fa-solid fa-door-open"></i>  <a href="index.html">Logout</a></li>
					</ul>
				</div>
			</div>


			<!-- MID COLUMN BEER-->
			<div class="col-md-6 p-3 bg-white div-wrapper">

				<form asp-area="Beers" asp-controller="Beers" asp-action="Beers" method="get">
					<!-- SEARCH-->
					<div class="row col-12 bg-white div-wrapper card box1">
						<div class="container">
							<div class="input-group input-group-sm">
								<input type="text" id="filtrar" name="filtrar" class="form-control" placeholder="Search for a beer...">
								<div class="input-group-append">
									<span class="input-group-text">										
										<button type="submit" >
											<i class="fa fa-search"></i> 
										</button>
									</span>
								</div>
							</div>
						</div>
						<br />
					</div>
				</form>

				<!-- BEER 1-->
				@foreach (var item in Model.List)
				{
					var image = "data:image/jpg;base64," + Convert.ToBase64String(item.Image, 0, item.Image.Length);
					<div class="bg-white div-wrapper card box1">
						
						<div class="row col-12">
							<div class="col-2 p-2">
								<a asp-route-id="@item.BeerId" asp-area="Beers" asp-page="/Account/BeerDetail">
									<img src="@image" alt="" class="img-fluid hist_pic lead float-left pt-2 mr-1">
								</a>
							</div>
							<div class="col-7 p-2 mt-2">
								<div class="row col-12">
									<div class="col-9">
										<span class="align-bottom">
											<h5> @Html.DisplayFor(modelItem => item.BeerName)</h5>
										</span>
										<span class="align-bottom">
											<h6><a href="@Url.Action("Beer","Home")">Kilter Brewery</a></h6>
										</span>
										<span class="align-bottom">
											<h6> @Html.DisplayFor(modelItem => item.BeerStyle)</h6>
										</span>
									</div>
									<div class="col-3 mt-4">
										<i class="fa-solid fa-square-plus"></i>
									</div>
								</div>
								<span class="align-bottom">
									<div class="row col-12">
										<div class="d-flex justify-content-between align-items-center">
											<div class="bratings col-6">
												<i class="fa fa-star rating-color"></i>
												<i class="fa fa-star rating-color"></i>
												<i class="fa fa-star rating-color"></i>
												<i class="fa fa-star rating-color"></i>
												<i class="fa fa-star"></i>
											</div>
											<div class="bratings col-6">
												<i class="fa fa-star rating-color"></i>
												<i class="fa fa-star rating-color"></i>
												<i class="fa fa-star rating-color"></i>
												<i class="fa fa-star-half-stroke rating-color"></i>
												<i class="fa fa-star"></i>
											</div>
										</div>
										<div class="d-flex justify-content-between align-items-center">
											<div class="col-6">
												<h6 class="text-center" style="font-size:11px">YOUR RATING (4)</h6>
											</div>
											<div class="col-6">
												<h6 class="text-right" style="font-size:11px">GLOBAL RATING (3.5)</h6>
											</div>

										</div>
									</div>
								</span>
							</div>
						</div>
					</div>
				

				<div class="col-12">
					<table class="table">
						<tbody>
							<tr>
								<td>8.2% ABV</td>
								<td>16 IBU</td>
								<td>First: 07/01/22</td>
								<td>Recent: 07/01/22</td>
								<td>Total: 1</td>
							</tr>
						</tbody>
					</table>
				</div>
			
				}

				<div class="text-center">
					Result @Html.Raw(Model.Pagi_info)
					<br />
					@Html.Raw(Model.Pagi_navegacion)
				</div>

			</div>
				

			<!-- </div>RIGTH COLUMN -->
			<div class="d-none d-lg-block col-md-3 p-3 ml-0 bg-white div-wrapper">
				<!-- PERFIL SUMMARY -->
				<div class="perfil-summary">
					<div>
						<div>
							<a href="perfil.html">
								<img class="img-pic img-fluid lead float-left rounded-circle mr-2"
									 src="~/img/perfil.jpeg"
									 alt="Lorem ipsum dolor sit amet">
							</a>
						</div>
						<div class="mt-2">
							<h5>Kelvin Jimenez</h5>
							<h6><a href="index.html">Kelvinj1979</a></h6>
						</div>

						<br>

						<div class="container-fluid p-0 mt-2">
							<!-- Control the column width, and how they should appear on different devices -->
							<div class="row">
								<div class="col-sm-6 border text-center"><a href="mybeer.html">691 Total</a></div>
								<div class="col-sm-6 border text-center"><a href="mybeer.html">506 Unique</a></div>
							</div>

							<div class="row">
